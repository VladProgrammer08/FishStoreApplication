@model IEnumerable<FishStoreApplication.Models.WishListItem>


@section Head
{
        <style>

        #line {
            width: 100%;
            border-top: 3px solid black;
            margin-top: 20px;
            margin-bottom: 10px;
        }

        .remove-btn {
            font-size: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100px;
            color: black;
            text-decoration: none;
        }

            .remove-btn:hover {
                color: gray;
            }

        #cart {
            border: 2px solid #000;
            background-color: white;
            color: black;
            padding: 7px 10px;
            font-size: 16px;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
            position:center;
            margin-bottom: 20px;
            border-radius: 9px;
            box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.3), -1px -1px 5px rgba(0, 0, 0, 0.2) inset;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        #cart:hover {
            background-color: black;
            color: white;
        }

        .icon-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            font-size: 1.5em;
            margin-top: 120px;
        }

        .icon-container i {
            font-size: 15em;
            margin-bottom: 50px;
        }

        #shopping_btn {
            display: inline-block;
            margin-top: 20px;
            padding: 15px 70px;
            text-decoration: none;
            background-color: black;
            color: white;
            border-radius: 5px;
            transition: background-color 0.3s, transform 0.3s ease-in-out;
        }

        #shopping_btn:hover {
            background-color: gray;
            transform: translateY(-5px);
        }

        </style>
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container">   
    <div class="row">  
        @if (Model.Any())
        {
            <h3>@ViewData["Title"]</h3>
            <div id="line"></div>
            <table class="table table-striped">
                <thead class="gray-header">
                    <tr>                      
                        <th>Product</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Size</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="RemoveFromWishList" asp-route-id="@item.ProductId" class="remove-btn">
                                    <i class="bx bx-x"></i>
                                </a>
                            </td>
                            <td><img src="@Url.Content(item.Product.MainImageURL)" alt="Product Image" style="width:150px; height:100px;" /></td>
                            <td>
                                <b>@Html.DisplayFor(modelItem => item.Product.Name)</b>
                                <br />
                                <span>ID: @item.Product.Id</span>
                                <br />
                            </td>
                            <td>
                                <br />
                                <b>@item.Product.Price.ToString("C")</b>
                            </td>
                            <td>
                                <span>Size: @item.Product.Size</span>
                            </td>
                            <td>
                                <br />
                                <a id="cart" asp-controller="WishList" asp-action="Add" asp-route-id="@item.ProductId">Add to Cart</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        }
        else
        {  
            <div class="icon-container">
                <i class='bx bx-file-blank'></i>
                <h3>Your wishlist is empty.</h3>
                <h5>Seems like you don't have wishes here.</h5>
                <h5>Make a wish!</h5>
                <div>
                    <a id="shopping_btn" asp-controller="ProductCatalog" asp-action="Index">Start Shopping</a>
                </div>
            </div>
        }
    </div>
    
    
</div>

