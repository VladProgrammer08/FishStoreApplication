@model FishStoreApplication.Models.AquariumViewModel

@{
	ViewData["Title"] = "Create a new Aquarium";
}

@if (ViewData["Message"] != null)
{
    <div class="alert alert-success">
        @ViewData["Message"]
    </div>
}
else
{
<h1>Create a new Aquarium</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <!-- The enctype is required to allow file upload -->
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Aquarium.AquariumBrand" class="control-label">Brand Name</label>
                <input asp-for="Aquarium.AquariumBrand" class="form-control" />
                <span asp-validation-for="Aquarium.AquariumBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aquarium.AquariumPrice" class="control-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="Aquarium.AquariumPrice" class="form-control" />
                </div>
                <span asp-validation-for="Aquarium.AquariumPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AquariumFileUpload.MainImage" class="control-label">Upload Main Image</label>
                <input asp-for="AquariumFileUpload.MainImage" type="file" class="form-control" />
                <span asp-validation-for="AquariumFileUpload.MainImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AquariumFileUpload.SecondaryImageOne" class="control-label">Secondary image URL one</label>
                <input asp-for="AquariumFileUpload.SecondaryImageOne" class="form-control" />
                <span asp-validation-for="AquariumFileUpload.SecondaryImageOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AquariumFileUpload.SecondaryImageTwo" class="control-label">Secondary image URL two</label>
                <input asp-for="AquariumFileUpload.SecondaryImageTwo" class="form-control" />
                <span asp-validation-for="AquariumFileUpload.SecondaryImageTwo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AquariumFileUpload.SecondaryImageThree" class="control-label">Secondary image URL three</label>
                <input asp-for="AquariumFileUpload.SecondaryImageThree" class="form-control" />
                <span asp-validation-for="AquariumFileUpload.SecondaryImageThree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AquariumFileUpload.SecondaryImageFour" class="control-label">Secondary image URL four</label>
                <input asp-for="AquariumFileUpload.SecondaryImageFour" class="form-control" />
                <span asp-validation-for="AquariumFileUpload.SecondaryImageFour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aquarium.AquariumGallons" class="control-label">Gallon capacity</label>
                <input asp-for="Aquarium.AquariumGallons" class="form-control" />
                <span asp-validation-for="Aquarium.AquariumGallons" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aquarium.AquariumMaterial" class="control-label">Material</label>
                <input asp-for="Aquarium.AquariumMaterial" class="form-control" />
                <span asp-validation-for="Aquarium.AquariumMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aquarium.Description" class="control-label">Description</label>
                <input asp-for="Aquarium.Description" class="form-control" />
                <span asp-validation-for="Aquarium.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aquarium.AquariumWarranty" class="control-label">Warranty</label>
                <input asp-for="Aquarium.AquariumWarranty" class="form-control" />
                <span asp-validation-for="Aquarium.AquariumWarranty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mb-2" />
            </div>
        </form>
    </div>
</div>
}
<div class="mb-2">
    <a class="btn btn-secondary" href="@Url.Action("Index")">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}