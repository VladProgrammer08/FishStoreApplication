@model FishStoreApplication.Models.Fish

@{
    ViewData["Title"] = "Delete" + Model.BreedName;
}

<h1>Delete @Model.BreedName</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Fish</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FishId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FishId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BreedName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BreedName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            $@Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FishImageURL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FishImageURL)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FishId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-secondary" href="@Url.Action("Index")">Back to List</a>
    </form>
</div>
