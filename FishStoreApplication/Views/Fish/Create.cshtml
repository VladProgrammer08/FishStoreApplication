@model FishStoreApplication.Models.FishViewModel

@{
    ViewData["Title"] = "Create a new Fish";
}
@if (ViewData["Message"] != null)
{
    <div class="alert alert-success">
        @ViewData["Message"]
    </div>
}
else
{
<h1>Create a new fish</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <!-- The enctype is required to allow file upload -->
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fish.Name" class="control-label">Breed Name</label>
                <input asp-for="Fish.Name" class="form-control" />
                <span asp-validation-for="Fish.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.Price" class="control-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Fish.Price" class="form-control" />
                    </div>
                <span asp-validation-for="Fish.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.Size" class="control-label">Size (S/M/L)</label>
                <input asp-for="Fish.Size" class="form-control" />
                <span asp-validation-for="Fish.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FishUpload.MainImage" class="control-label">Upload Main Image</label>
                <input asp-for="FishUpload.MainImage" type="file" class="form-control" />
                <span asp-validation-for="FishUpload.MainImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FishUpload.SecondaryImageOne" class="control-label">Secondary image URL one</label>
                <input asp-for="FishUpload.SecondaryImageOne" class="form-control" />
                <span asp-validation-for="FishUpload.SecondaryImageOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FishUpload.SecondaryImageTwo" class="control-label">Secondary image URL two</label>
                <input asp-for="FishUpload.SecondaryImageTwo" class="form-control" />
                <span asp-validation-for="FishUpload.SecondaryImageTwo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FishUpload.SecondaryImageThree" class="control-label">Secondary image URL three</label>
                <input asp-for="FishUpload.SecondaryImageThree" class="form-control" />
                <span asp-validation-for="FishUpload.SecondaryImageThree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FishUpload.SecondaryImageFour" class="control-label">Secondary image URL four</label>
                <input asp-for="FishUpload.SecondaryImageFour" class="form-control" />
                <span asp-validation-for="FishUpload.SecondaryImageFour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.FishSpecialDiet" class="control-label">Fish Special diet</label>
                <input asp-for="Fish.FishSpecialDiet" class="form-control" />
                <span asp-validation-for="Fish.FishSpecialDiet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.FishEnvironment" class="control-label">Fish Environment</label>
                <input asp-for="Fish.FishEnvironment" class="form-control" />
                <span asp-validation-for="Fish.FishEnvironment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.FishTemperament" class="control-label">Fish Temperament</label>
                <input asp-for="Fish.FishTemperament" class="form-control" />
                <span asp-validation-for="Fish.FishTemperament" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.FishCareLevel" class="control-label">Fish Care level</label>
                <input asp-for="Fish.FishCareLevel" class="form-control" />
                <span asp-validation-for="Fish.FishCareLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.Length" class="control-label">Length</label>
                <input asp-for="Fish.Length" class="form-control" />
                <span asp-validation-for="Fish.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.Height" class="control-label">Height</label>
                <input asp-for="Fish.Height" class="form-control" />
                <span asp-validation-for="Fish.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.Width" class="control-label">Width</label>
                <input asp-for="Fish.Width" class="form-control" />
                <span asp-validation-for="Fish.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.Description" class="control-label">Description</label>
                <input asp-for="Fish.Description" class="form-control" />
                <span asp-validation-for="Fish.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.Warranty" class="control-label">Warranty</label>
                <input asp-for="Fish.Warranty" class="form-control" />
                <span asp-validation-for="Fish.Warranty" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary mb-2" />
            </div>
        </form>
    </div>
</div>
}
<div class="mb-2">
    <a class="btn btn-secondary" href="@Url.Action("Index")">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
